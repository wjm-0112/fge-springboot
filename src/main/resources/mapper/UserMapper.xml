<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.mapper.UserMapper">
    <select id="login" resultType="com.neu.entity.User">
        select * from user where uname=#{uanme} and upwd=#{upwd} and role=#{role}
    </select>
    <insert id="regUser" parameterType="com.neu.entity.User">
        insert into user(id,uname,upwd,role,email,collection,seen) values(#{id},#{uname},#{upwd},#{role},#{email},#{collection},#{seen})
    </insert>
    <select id="findUser" resultType="com.neu.entity.User">
        select * from user limit #{index},#{size}
    </select>
    <select id="findUserMo" resultType="com.neu.entity.User">
        select * from user
        <where>
            <if test="uname!='' and uname!=null">
                and uname like concat('%',#{uname},'%')
            </if>
        </where>
        limit #{index},#{size}
    </select>
    <delete id="delUser" parameterType="com.neu.entity.User">
        delete from user where id=#{id}
    </delete>
    <select id="findById" resultType="com.neu.entity.User">
        select * from user where id=#{id}
    </select>
    <update id="updateUser" parameterType="com.neu.entity.User">
        update user set uname=#{uname},upwd=#{upwd},role=#{role},email=#{email},collection=#{collection},seen=#{seen} where id=#{id}
    </update>
    <insert id="addUser" parameterType="com.neu.entity.User">
        insert into user(id,uname,upwd,role,email,collection,seen) values(#{id},#{uname},#{upwd},#{role},#{email},#{collection},#{seen})
    </insert>

    <select id="getAllUser" resultType="com.neu.entity.User">
        SELECT * FROM user
    </select>
    <select id="getAllUserCollection" resultType="com.neu.entity.UserCollection">
        SELECT * FROM user_collection
    </select>
    <select id="getAllUserSeen" resultType="com.neu.entity.UserSeen">
        SELECT * FROM user_seen
    </select>

<!--    修改用户名、密码、邮箱-->
    <update id="updateInformation">
        update user set uname=#{uname},upwd=#{upwd},email=#{email} where id=#{id}
    </update>
</mapper>